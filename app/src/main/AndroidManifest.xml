<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Разрешения -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Test2"
        tools:targetApi="31"
        android:usesCleartextTraffic="true">

        <!-- Стартовая Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Test2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Логин -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"
            android:theme="@style/Theme.Test2" />

        <!-- Регистрация -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"
            android:theme="@style/Theme.Test2" />

        <!-- Экран добавления продуктов (YOLO) -->
        <activity
            android:name=".ui.home.AddDish.CreateDish.AddProduct.AddProductsActivity"
            android:exported="false"
            android:launchMode="singleTop" />

        <!-- Экран создания блюда -->
        <activity
            android:name=".CreateDishActivity"
            android:exported="false" />

        <!-- Экран выбора блюд на день -->
        <activity
            android:name=".AddDishActivity"
            android:exported="false" />

        <!-- Камера (делает фото, возвращает URI) -->
        <activity
            android:name=".utils.CameraActivity"
            android:exported="false"
            android:launchMode="singleTop" />

    </application>

</manifest>
