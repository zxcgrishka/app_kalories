<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="14dp"
        android:elevation="8dp"
        android:src="@drawable/icon2_2"
        app:layout_constraintEnd_toStartOf="@+id/textView7"
        app:layout_constraintTop_toTopOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="92dp"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/khula_bold"
        android:gravity="center"
        android:text="Создать блюдо"
        android:textColor="@color/c5"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/rvProducts"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddProduct"
        android:layout_width="296dp"
        android:layout_height="58dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/khula_regular"
        android:insetTop="4dp"
        android:insetBottom="4dp"
        android:text="новый продукт"
        android:textAlignment="center"
        android:textColor="@color/c5"
        android:textColorLink="@color/c1"
        android:textSize="20sp"
        app:cornerRadius="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.477"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvProducts"
        app:strokeColor="@color/c5"
        app:strokeWidth="1dp" />

    <Button
        android:id="@+id/btnSaveDish"
        android:layout_width="252dp"
        android:layout_height="72dp"
        android:background="@drawable/gradient_button_green"
        android:elevation="8dp"
        android:fontFamily="@font/khula_bold"
        android:insetTop="0dp"
        android:text="Готово"
        android:textAlignment="center"
        android:textColor="@color/c1"
        android:textSize="24sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAddProduct"
        app:layout_constraintVertical_bias="0.186" />

    <EditText
        android:id="@+id/etDishName"
        android:layout_width="298dp"
        android:layout_height="58dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/khula_light"
        android:hint="Название блюда..."
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="@color/c5"
        android:textColorHint="@color/c5"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/tvCalories"
        android:layout_width="132dp"
        android:layout_height="25dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/khula_bold"
        android:text="Всего ККАЛ:"
        android:textColor="@color/c5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/etDishName"
        app:layout_constraintTop_toBottomOf="@+id/etDishName" />

    <TextView
        android:id="@+id/tvTotalCalories"
        android:layout_width="132dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/khula_bold"
        android:text="0"
        android:textColor="@color/c3"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/tvCalories"
        app:layout_constraintTop_toBottomOf="@+id/etDishName" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProducts"
        android:layout_width="332dp"
        android:layout_height="243dp"
        android:layout_marginTop="60dp"
        android:layout_weight="1"
        android:background="@drawable/gradient_button_green"
        android:elevation="8dp"
        android:padding="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etDishName"
        tools:listitem="@layout/item_product" />

</androidx.constraintlayout.widget.ConstraintLayout>