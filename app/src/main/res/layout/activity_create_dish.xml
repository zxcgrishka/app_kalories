<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".CreateDishActivity">

    <!-- ЗАГОЛОВОК - такая же позиция как в AddDishActivity -->
    <LinearLayout
        android:id="@+id/headerContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="14dp"
            android:elevation="8dp"
            android:src="@drawable/icon2_2" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/khula_bold"
            android:text="Создать блюдо"
            android:textColor="@color/c5"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- КНОПКА "ГОТОВО" - такая же позиция как в AddDishActivity -->
    <Button
        android:id="@+id/btnSaveDish"
        android:layout_width="299dp"
        android:layout_height="65dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/gradient_button_green"
        android:fontFamily="@font/khula_bold"
        android:insetTop="4dp"
        android:insetBottom="4dp"
        android:text="Готово"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- ОСНОВНОЙ КОНТЕЙНЕР С КОНТЕНТОМ -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btnSaveDish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerContainer">

        <!-- Название блюда -->
        <EditText
            android:id="@+id/etDishName"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edittext_background"
            android:fontFamily="@font/khula_light"
            android:gravity="center"
            android:hint="Название блюда..."
            android:inputType="text"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:textColor="@color/c5"
            android:textColorHint="@color/c5"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- ОБЩИЙ КОНТЕЙНЕР ДЛЯ ВСЕЙ ИНФОРМАЦИИ О БЛЮДЕ -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/dishInfoContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/menu_background"
            android:padding="16dp"
            app:layout_constraintBottom_toTopOf="@+id/neuralLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etDishName">

            <!-- Контейнер для ККАЛ и БЖУ с фоном c1 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/nutritionInfoContainer"
                android:layout_width="377dp"
                android:layout_height="100dp"
                android:background="@drawable/nutrition_background"
                android:padding="0dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Калории -->

                <!-- БЖУ -->
                <LinearLayout
                    android:id="@+id/caloriesLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:id="@+id/tvCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/khula_bold"
                        android:text="Всего ККАЛ:"
                        android:textColor="@color/c5"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvTotalCalories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/khula_bold"
                        android:text="0"
                        android:textColor="@color/c3"
                        android:textSize="34sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/nutritionLayout"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/caloriesLayout">

                    <TextView
                        android:id="@+id/tvTotalProteins"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/khula_regular"
                        android:gravity="center"
                        android:text="Б: 0г"
                        android:textColor="#2196F3"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvTotalFats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/khula_regular"
                        android:gravity="center"
                        android:text="Ж: 0г"
                        android:textColor="#FF9800"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/tvTotalCarbs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/khula_regular"
                        android:gravity="center"
                        android:text="У: 0г"
                        android:textColor="#4CAF50"
                        android:textSize="20sp" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Список продуктов -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProducts"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:padding="8dp"
                app:layout_constraintBottom_toTopOf="@+id/btnAddProduct"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nutritionInfoContainer"
                tools:listitem="@layout/item_product" />

            <!-- Кнопка добавления продукта -->
            <Button
                android:id="@+id/btnAddProduct"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/nutrition_background"
                android:fontFamily="@font/khula_bold"
                android:insetTop="4dp"
                android:insetBottom="4dp"
                android:text="Новый продукт"
                android:textAlignment="center"
                android:textColor="@color/c5"
                android:textSize="24sp"
                app:backgroundTint="@null"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rvProducts" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Кнопки нейросети -->
        <LinearLayout
            android:id="@+id/neuralLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dishInfoContainer">

            <Button
                android:id="@+id/btnNeuralGallery"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/gradient_button_green"
                android:fontFamily="@font/khula_bold"
                android:gravity="center"
                android:insetTop="4dp"
                android:insetBottom="4dp"
                android:text="Галерея"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@null"
                app:cornerRadius="18dp"
                app:strokeColor="@color/c5"
                app:strokeWidth="1dp" />

            <Button
                android:id="@+id/btnNeuralCamera"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="@drawable/gradient_button_green"
                android:fontFamily="@font/khula_bold"
                android:gravity="center"
                android:insetTop="4dp"
                android:insetBottom="4dp"
                android:text="Камера"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                app:backgroundTint="@null"
                app:cornerRadius="18dp"
                app:strokeColor="@color/c5"
                app:strokeWidth="1dp" />
        </LinearLayout>

        <!-- Статус нейросети -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text=""
            android:textColor="@color/c5"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/neuralLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>